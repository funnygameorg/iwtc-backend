<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanReriod="60 seconds" >



    <conversionRule
            conversionWord="clr"
            converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <!-- 변수 설정 -->
    <property name="BY_DATE" value="%d{yyyy-MM-dd-HH}.%i" />
    <property name="LOG_PATH" value="./logs" />
    <property name="LOG_FILE_NAME" value="logFile" />
    <property name="LOG_PATTERN" value="[%date{yyyy-mm-dd HH:mm:ss.SSS}] %blue([%logger{72}]) %highlight([%-5level]) %green([%X{request_id}]) %msg%n" />

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%c{5}] %m [%X{userId}]%n" />
        </layout>
    </appender>

    <!-- ALL CONSOLE -->
    <appender name="CONSOLE_ALL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                ${LOG_PATTERN}
            </pattern>
        </encoder>
    </appender>


    <!-- INFO CONSOLE -->
    <appender name="CONSOLE_INFO" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>
                ${LOG_PATTERN}
            </pattern>
        </encoder>
    </appender>

    <!-- WARN CONSOLE -->
    <appender name="CONSOLE_WARN" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>
                ${LOG_PATTERN}
            </pattern>
        </encoder>
    </appender>

    <!-- ERR CONSOLE -->
    <appender name="CONSOLE_ERROR" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>
                ${LOG_PATTERN}
            </pattern>
        </encoder>
    </appender>




    <!-- 기본 출력-->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE_INFO" />
        <appender-ref ref="CONSOLE_WARN" />
        <appender-ref ref="CONSOLE_ERROR" />
    </root>

    <!-- S3와 통신할 때 정보 출력에 사용, 데이터가 너무 커서 로그 읽기가 힘들다.-->
    <logger name="org.apache.http">
        <level value="warn" />
    </logger>

</configuration>